import torch
import torch.nn as nn
import torch.nn.functional as F
from torch_geometric.nn import GINEConv

class GINEWithEdgeMLP(nn.Module):
    """
    GINE-style layer where edge_attr is first passed through a small MLP
    before being fed into PyG's GINEConv.
    """

    def __init__(
        self,
        in_channels: int,
        out_channels: int,
        edge_in_dim: int,
        edge_hidden_dim: int = 32,
    ):
        super().__init__()

        node_mlp = nn.Sequential(
            nn.Linear(in_channels, out_channels),
            nn.ReLU(),
            nn.Linear(out_channels, out_channels),
        )

        # Edge MLP: original edge features -> some hidden dimension
        self.edge_mlp = nn.Sequential(
            nn.Linear(edge_in_dim, edge_hidden_dim),
            nn.ReLU(),
            nn.Linear(edge_hidden_dim, edge_hidden_dim),
        )

        self.conv = GINEConv(node_mlp, edge_dim=edge_hidden_dim)

    def forward(self, x, edge_index, edge_attr=None):
        if edge_attr is not None:
            edge_attr = self.edge_mlp(edge_attr)
        return self.conv(x, edge_index, edge_attr=edge_attr)
